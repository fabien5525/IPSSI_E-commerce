    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'Nom'|trans}}</th>
                <th>Description</th>
                <th>{{'Prix'|trans}}</th>
                <th>Stock</th>
                <th>{{'Photo'|trans}}</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.stock }}</td>
                <td>
                    {% if produit.photo is not empty %}
                        <img src="{{ asset('/uploads/'~produit.photo) }}" style="width: 100px;">
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}">{{'show'|trans}}</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('produit_edit', {'id': produit.id}) }}">{{'edit'|trans}}</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>