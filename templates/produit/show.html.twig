{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{% if produit.photo is not empty %}
                        <img src="{{ asset('/uploads/'~produit.photo) }}" style="width: 100px;">
                    {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
    

        {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
    <a href="{{ path('ajout_panier', {'id': produit.id }) }}">Ajouter au panier</a>

{% endblock %}
