{% extends "base.html.twig" %}

{% block title %}New Users{% endblock %}

{% block body %}
    <h1>Liste users</h1>
        <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'Nom'|trans}}</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for u in users %}
            <tr>
                <td>{{ u.id }}</td>
                <td>{{ u.nom }}</td>
                <td>{{ u.prenom }}</td>
                <td>{{ u.email }}</td>
            </tr>
